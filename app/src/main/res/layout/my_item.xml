<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <ImageView
        android:layout_width="136dp"
        android:layout_height="200dp"
        android:id="@+id/poster"
        android:layout_gravity="start"
        android:padding="10px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/title_film"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="13dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/poster" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/age"
        android:layout_below="@+id/genres"
        android:layout_alignStart="@+id/genres"
        android:layout_alignEnd="@+id/genres"
        android:textStyle="normal|italic"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/genres"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/title_film"
        android:layout_alignStart="@+id/title_film"
        android:layout_alignEnd="@+id/title_film"
        android:textColor="@android:color/black" />

</RelativeLayout>